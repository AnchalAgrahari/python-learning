
					#				ARRAY				#
#		append(), insert(), pop(), remove(), index(), reverse()

import array
asd =array.array('i',[1,2,3])

print("The created array is :", end="")
for i in range(0,3):
	print(asd[i],end="")

print(" ")

asd.append(5)

print("The append array is :", end="")
for i in range(0,4):
	print(asd[i],end="")
print("") 

asd.insert(3,6)

print("The array after the insertation is :", end="")
for i in range(0,5):
	print(asd[i],end="")
print("")

#removes the element of the given position

print("The popped element is :", asd.pop(4))

























































































































































































