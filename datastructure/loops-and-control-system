

#while(expression)loop:			"if the condition is true the output will be in "

count = 1
while(count < 3):
	print("Hii")
	count = count +1



#for loop :						"all the words will be altrated 'line by line' "

l = ["hii there!","hii there!"]
for i in l:
	print(i)

#nested for loop:				"print the letter one by one line wise"
# for loop in sequence:
#	 for loop in sequence:
#		statements(s):
#		statements(s):


#nested while loop:
#while expression():
#	while expression():
#		statement(s):
#		statement(s):


l=["this","is","nestend","for","and","while","loop"]
for word in l:
	for character in word:
		print(character)


print(" ")
print(" ")
print(" ")
print(" ")

####loop control statement : 

#continue statement 				"continues the statement even after encountering the firest letter 'e'or 's' "
l = "set your heart ablaze"
for letter in l:
	if(letter == 'e' or letter =='s'):
		continue;
	else:
		print (letter)

#break statement :				"break the statement after encountering the firest letter 'e'or 's' "

l = "set your heart ablaze"
for letter in l:
	if(letter == 'e' or letter =='s'):
		break;
	else:
		print (letter)

print(" ")

#pass statement:		

l = "set your heart ablaze"
for letter in l:
	pass;
	print (letter)


################################

#split statement:				"split the string into list with space "

s="hii hello "
l=s.split()
print(l)						#{this is the output :: ['hii', 'hello'] }	

s="hii , hello"					#"split the string into list with comma "
l=s.split(',')
print(l)						#{this is the output :: ['hii ', ' hello'] }	

