# complex number and theri operations in python

# 						exp(),log()


import cmath				#works with complex numbers 
import math 				#works with real numbers

X= 1.0
Y= 1.0

#converting Y, and X  into complex

Z= complex(X,Y)


#printing the exponent of the complex number
print("The exponent of the complex number")
print(cmath.exp(Z))


#printing the log form of complex number
print("The (log base 2)form of thr complex number")
print(cmath.log(Z,2))

print(" ")


#								log10(), sqrt()

import math 
import cmath

X= 1.0
Y= 1.0

#converting Y, and X  into complex

Z= complex(X,Y)


#printing log10of the complex number
print("Thelog10 the complex number")
print(cmath.log10(Z))


#printing squar root form of complex number
print("The square root of thr complex number")
print(cmath.sqrt(Z))

print(" ")


#				isfinite(), isinf(), isnan()

import cmath
import math

#initializing real number

A = 1
B = 1.0
x = math.inf
y = math.nan

Z= complex(A,B)

W = complex(A,x)

V = complex(B,y)


#checking if the both number is finite:
if cmath.isfinite(Z):
	print("Complex number Z finite. ")
else : print("Complex number Z infinite. ")

print(" ")

#checking if the either number is/are infinite:

if cmath.isinf(W):
	print("Complex number W infinte. ")
else : print("Complex number W finite. ")

print(" ")

#checking if the either of the complex number is/are infintie
if cmath.isnan(V):
	print("Complex number V NaN")
else : print("Complex number V is not NaN")



#					pi and e


import cmath 
import math

print("The value of pi is : ", end="")
print(cmath.pi)

print(" ")

print("The vale of exponent is : ", end="")
print(cmath.e)

print(" ")

#			sin(), cos(), tan(),	:print sin , cos , tan values oof strings

import cmath
x = 1.0
y = 1.0

z= complex(x,y)
print("The sin value of complex number is :", end="")
print(cmath.sin(z))
print("The cos value of complex number is :")
print(cmath.cos(z))
print("The tan value of complex number is :")
print(cmath.tan(z))
print(" ")


#		    			inverse	: print the arc sin arc cos and arc tan values of variable.


import cmath
x = 1.0
y = 1.0

z= complex(x,y)
print("The asin value of complex number is :", end="")
print(cmath.asin(z))
print("The acos value of complex number is :")
print(cmath.acos(z))
print("The atan value of complex number is :")
print(cmath.atan(z))

print(" ")

#				hypabolic trignomertic values ['trign"h" ']


import cmath
x = 1.0
y = 1.0

z= complex(x,y)
print("The hyperbolic sin value of complex number is :", end="")
print(cmath.sinh(z))
print("The hyperbolic cos value of complex number is :")
print(cmath.cosh(z))
print("The hyperbolic tan value of complex number is :")
print(cmath.tanh(z))

print(" ")

#					inverse hyperbolic trignomertic complex numbers


import cmath
x = 1.0
y = 1.0

z= complex(x,y)
print("The invers hyperbolid sin value of complex number is :", end="")
print(cmath.asinh(z))
print("The inverse hyperbolic cos value of complex number is :")
print(cmath.acosh(z))
print("The inverse hyperbolic tan value of complex number is :")
print(cmath.atanh(z))












































