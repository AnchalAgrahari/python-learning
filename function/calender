#outputs mean :

#0 = Monday
#1 = Tuesday
#2 = Wednesday
#3 = Thursday
#4 = Friday
#5 = Saturday
#6 = Sunday



#					calendar() and firstweekday()


#importing calander module for calander operation

import calendar

print("The calander of year 2021 is : ")
print(calendar.calendar(2021,2,1,10))			#character width=2, number of line=1 and columns =6

print("The starting day number in the calendar is : ", end="")
print(calendar.firstweekday())


#					isleap() and leapdays()

import calendar

if (calendar.isleap(2008)):
	print("The year is leap")
else : print("The year is not leap")

print("The leap days between 1950 to 2025 is : ",end="")
print(calendar.leapdays(1950,2025))

# 							month()
#print specific mont of the specific year:

import calendar
print("The month of 9th of 2004 is :")
print(calendar.month(2004,9,2,1))



# 							monthrange() and prcal()

import calendar

#using monthrange() to print strat week day and number of month
print("strating day of the weeks and number of day in month : ",end="")
print(calendar.monthrange(2025,1))

print(" ")

#using prcal() to print caldendar of 2025

print("The calendar of 2025 is :")
calendar.prcal(2025,2,1,6)

print(" ")



#					prmonth() and setfirstweekday() and weekday()


import calendar

print("The 10th month of 2015 is : ")
calendar.prmonth(2019,10,2,1)

calendar.setfirstweekday(4)

print(" ")

#using firstweekday() to check the changed day
print("The week day number is :",end="")
print(calendar.firstweekday())

print(" ")

#using weekday() to print the day number of date:
print("The day number of 12 september 2025 is :", end="")
print(calendar.weekday(2025,9,12))
























































































































































































































































































































































































































































































































